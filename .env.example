# CareerAI Environment Variables
# Copy this file to .env and update the values accordingly

# -- Application --
PORT=3000
NODE_ENV=production

# -- URLs --
PUBLIC_URL=https://www.careerai.me
STORAGE_URL=https://storage.careerai.me/default

# -- Database (PostgreSQL) --
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/careerai
POSTGRES_DB=careerai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# -- Authentication --
ACCESS_TOKEN_SECRET=your_access_token_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# -- OAuth (Optional) --
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://www.careerai.me/api/auth/google/callback

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=https://www.careerai.me/api/auth/github/callback

# -- Storage (MinIO) --
STORAGE_ENDPOINT=localhost
STORAGE_PORT=9000
STORAGE_REGION=default
STORAGE_BUCKET=default
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_USE_SSL=false
STORAGE_SKIP_BUCKET_CHECK=false

# -- Chrome Browser (for PDF generation) --
CHROME_TOKEN=chrome_token
CHROME_URL=ws://localhost:8080
CHROME_PORT=8080

# -- Email (Optional) --
MAIL_FROM=noreply@careerai.me
# SMTP_URL=smtp://user:pass@smtp:587

# -- Feature Flags (Optional) --
DISABLE_SIGNUPS=false
DISABLE_EMAIL_AUTH=false

